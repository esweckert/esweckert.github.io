<mvc:View
	height="99%"
	controllerName="com.esweckert.profile.controller.Home"
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc">
	<Page showHeader="false" showFooter="true" enableScrolling="true">
		<landmarkInfo>
			<PageAccessibleLandmarkInfo
				rootRole="Region"
				rootLabel="{i18n>Home_rootLabel}"
				contentRole="Main"
				contentLabel="{i18n>Home_contentLabel}"/>
		</landmarkInfo>
		<l:BlockLayout
			id="BlockLayout"
			background="Default">
			<l:BlockLayoutRow>
				<l:BlockLayoutCell class="sapUiNoContentPadding">
					<Image
						src="{
							parts: [{path:'view>/isPhone'}, {path:'i18n>homeImage'}],
							formatter: '.formatter.srcImageValue'
						}"
						width="100%"
						height="100%"/>
				</l:BlockLayoutCell>
			</l:BlockLayoutRow>

			<l:BlockLayoutRow>
				<l:BlockLayoutCell 
				backgroundColorSet="ColorSet11"
					backgroundColorShade="ShadeC">
		
					<Title
							id="headerTitle"
							text="{i18n>headerTitle}"
							level="H2"
							titleStyle="H2"
							textAlign="Center"
							class="sapUiTinyMarginTopBottom"
							width="100%"/>
						<Text
							text="{i18n>headerContent}"
							textAlign="Center"
							
							class="sapUiTinyMarginBottom customTextSize"
							width="100%"/>
		
				</l:BlockLayoutCell>
			</l:BlockLayoutRow>

			<l:BlockLayoutRow>
				<l:BlockLayoutCell
					backgroundColorSet="ColorSet10"
					backgroundColorShade="ShadeD">
					<l:VerticalLayout>
						<core:Icon
							src="sap-icon://business-objects-mobile"
							size="2.5rem"
							color="Default"/>
						<Title
							id="datamigrationTile"
							text="{i18n>datamigrationTitle}"
							level="H3"
							titleStyle="H2"
							class="sapUiTinyMarginTopBottom">
							</Title>
						<Text
							text="{i18n>datamigrationContent}"
							class="sapUiTinyMarginBottom"/>


					</l:VerticalLayout>
					<l:VerticalLayout>
					<Button
						id="MeetingButton1"
						class="sapUiTinyMarginBeginEnd"
						icon="sap-icon://appointment-2"
						type="{/buttonType}"
						text="{i18n>bookMeeting}"
						tooltip="{i18n>learnDataMigrationTooltip}"/>
					</l:VerticalLayout>
				</l:BlockLayoutCell>

				<l:BlockLayoutCell
					backgroundColorSet="ColorSet10"
					backgroundColorShade="ShadeA">
					<l:VerticalLayout>
						<core:Icon
							src="sap-icon://validate"
							size="2.5rem"
							color="Default"/>
						<Title
							id="dataqualityTile"
							text="{i18n>dataqualityTitle}"
							level="H3"
							titleStyle="H2"
							class="sapUiTinyMarginTopBottom"/>
						<Text
							text="{i18n>dataqualityContent}"
							class="sapUiTinyMarginBottom"/>
							<Button
						id="MeetingButton2"
						class="sapUiTinyMarginBeginEnd"
						icon="sap-icon://appointment-2"
						type="{/buttonType}"
						text="{i18n>bookMeeting}"
						tooltip="{i18n>learnDataQualityTooltip}"/>
					</l:VerticalLayout>
				</l:BlockLayoutCell>

				<l:BlockLayoutCell
					backgroundColorSet="ColorSet10"
					backgroundColorShade="ShadeD">
					<l:VerticalLayout>
						<core:Icon
							src="sap-icon://official-service"
							size="2.5rem"
							color="Default"/>
						<Title
							text="{i18n>datagovernanceTitle}"
							level="H3"
							titleStyle="H2"
							class="sapUiTinyMarginTopBottom"/>
						<Text
							text="{i18n>datagovernanceContent}"
							class="sapUiTinyMarginBottom"/>
						<Button
						id="MeetingButton3"
						class="sapUiTinyMarginBeginEnd"
						icon="sap-icon://appointment-2"
						type="{/buttonType}"
						text="{i18n>bookMeeting}"
						tooltip="{i18n>learnDatagovernanceTooltip}"/>	

					</l:VerticalLayout>
				</l:BlockLayoutCell>

			</l:BlockLayoutRow>

			<l:BlockLayoutRow>
				<l:BlockLayoutCell
					backgroundColorSet="ColorSet11"
					backgroundColorShade="ShadeB">
					<l:VerticalLayout>
						<core:Icon
							src="sap-icon://thumb-up"
							size="2.5rem"
							color="Default"/>
						<Title
							level="H3"
							titleStyle="H2"
							class="sapUiTinyMarginTopBottom">
							<Link text="{i18n>socialMediaTitle}" href="https://www.linkedin.com/in/esweckert" target="_blank" />
							</Title>
						<Text
							text="{i18n>socialMediaContent}"
							class="sapUiTinyMarginBottom"/>
					</l:VerticalLayout>
				</l:BlockLayoutCell>

			</l:BlockLayoutRow>


		</l:BlockLayout>
		<content>
			<Bar design="Footer">
				<contentLeft>

					<Label text="Â© 2024. Thomas F Wecker. All rights reserved."/>
				</contentLeft>

				<contentMiddle>
					<Label text="Handcrafted with"/>
					<core:Icon
							src="sap-icon://heart"
							size="1rem"
							color="red"/>
					<Label text="and SAPUI5."/>	
				</contentMiddle>

				<contentRight>

					<Link text="Contact" 
						press="onToContact"
						target="_blank"/>
					<Link text="Privacy" 
						href="https://docs.github.com/en/site-policy/privacy-policies/github-general-privacy-statement"
						target="_blank"/>
				</contentRight>
			</Bar>
		</content>

	</Page>
</mvc:View>